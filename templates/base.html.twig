<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    <header>
        <nav class="navbar navbar-expand-lg bg-dark">
            <div class="container-lg d-flex align-items-center justify-content-between">
                <a id="logoNavBarre" class="nav-link text-light" href="{{ path('app_citation') }}">Kaamelott</a>
                <!--<a id="logoNavBarre" class="navbar-brand text-light imgBase" href="#">LOGO</a>-->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end text-light" id="navbarNav">
                    <ul class="navbar-nav">
                        <li>
                            <a class="nav-link text-light" href="{{ path('app_citation') }}">citations</a>
                        </li>
                        <li>
                            <a class="nav-link text-light" href="{{ path('populary_quotes') }}">citations populaires</a>
                        </li>
                        {% if app.user %}
                            <li>
                                <a class="nav-link text-light" href="{{ path('app_user_quotes',{id:app.user.id}) }}">mes quotes</a>
                            </li>
                            <li>
                                <a class="nav-link text-primary" href="{{ path('app_logout') }}">logout</a>
                            </li>
                            {% if "ROLE_ADMIN" in app.user.roles %}
                                <li>
                                    <a class="nav-link text-danger" href="{{ path('app_user_index') }}">ADMIN</a>
                                </li>
                            {% endif %}
                        {% else %}
                            <li>
                                <a class="nav-link text-primary" href="{{ path('app_login') }}">login</a>
                            </li>
                            <li>
                                <a class="nav-link text-primary" href="{{ path('app_register') }}">register</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header> <!-- BAR DE NAVIGATION -->

        <div class="container">
            {% block body %}{% endblock %}
        </div>

    </body>
</html>
